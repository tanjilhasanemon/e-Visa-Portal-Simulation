<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #36454F;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.visa_management_portal.tanjil.registeredAgent.controller.UploadClientDocumentsController">
    <children>
        <Label layoutX="200.0" layoutY="20.0" text="Upload Client Documents" textFill="#00a1ec" underline="true">
            <font><Font name="System Bold" size="26.0" /></font>
        </Label>

        <Label layoutX="20.0" layoutY="80.0" text="Application ID:" textFill="white" />
        <TextField fx:id="applicationIdTextField" layoutX="140.0" layoutY="76.0" prefWidth="200.0" />

        <Label layoutX="20.0" layoutY="130.0" text="File Path:" textFill="white" />
        <TextField fx:id="filePathTextField" layoutX="140.0" layoutY="126.0" prefWidth="420.0" />
        <Button layoutX="570.0" layoutY="126.0" onAction="#chooseFileOnAction" prefWidth="100.0" style="-fx-background-color: #00a1ec;" text="Choose" />

        <CheckBox fx:id="filesValidCheckBox" layoutX="20.0" layoutY="180.0" text="Files valid" textFill="white" />
        <Button layoutX="20.0" layoutY="220.0" onAction="#validateOnAction" prefWidth="120.0" style="-fx-background-color: #00a1ec;" text="Validate" />
        <Button layoutX="160.0" layoutY="220.0" onAction="#attachOnAction" prefWidth="120.0" style="-fx-background-color: #00a1ec;" text="Attach" />
        <Button layoutX="320.0" layoutY="220.0" onAction="#backToDashboardOnAction" prefWidth="180.0" style="-fx-background-color: #00a1ec;" text="Back to Dashboard" />

        <Label fx:id="lblAgentUploadMsg" layoutX="20.0" layoutY="260.0" textFill="red" />
        <Label alignment="CENTER" layoutY="480.0" prefHeight="20.0" prefWidth="700.0" style="-fx-background-color: white;" text="eVisa Portal | Agent - Upload" />
    </children>
</AnchorPane>
