<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #36454F;"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.visa_management_portal.tanjil.applicant.controller.TrackApplicationController">
    <Label layoutX="220.0" layoutY="20.0" text="Track Applications" textFill="#00a1ec" underline="true">
        <font>
            <Font name="System Bold" size="26.0"/>
        </font>
    </Label>

    <TableView fx:id="trackApplicationsTableView" layoutX="20.0" layoutY="70.0" prefHeight="320.0" prefWidth="660.0">
        <columns>
            <TableColumn fx:id="applicationIdTableColumn" prefWidth="220.0" text="Application ID"/>
            <TableColumn fx:id="statusTableColumn" prefWidth="220.0" text="Status"/>
            <TableColumn fx:id="actionTableColumn" prefWidth="220.0" text="Action"/>
        </columns>
    </TableView>

    <Button layoutX="20.0" layoutY="410.0" onAction="#viewDetailsOnAction" prefWidth="120.0"
            style="-fx-background-color: #00a1ec;" text="View Details"/>
    <Button layoutX="160.0" layoutY="410.0" onAction="#backToDashboardOnAction" prefWidth="150.0"
            style="-fx-background-color: #00a1ec;" text="Back to Dashboard"/>

    <Label alignment="CENTER" layoutY="480.0" prefHeight="20.0" prefWidth="700.0" style="-fx-background-color: white;"
           text="eVisa Portal | Track"/>
</AnchorPane>
