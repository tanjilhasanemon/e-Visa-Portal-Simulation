        <Button layoutX="460.0" layoutY="330.0" onAction="#backToDashboardOnAction" prefWidth="160.0" style="-fx-background-color: #00a1ec;" text="Back to Dashboard" />

        <Label fx:id="lblPrepareMsg" layoutX="40.0" layoutY="370.0" textFill="red" />
        <Label alignment="CENTER" layoutY="480.0" prefHeight="20.0" prefWidth="700.0" style="-fx-background-color: white;" text="eVisa Portal | Agent - Prepare" />
    </children>
</AnchorPane>
