<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #36454F;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.visa_management_portal.tanjil.registeredAgent.controller.PrepareSubmitController">
    <children>
        <Label layoutX="170.0" layoutY="20.0" text="Prepare and Submit Application" textFill="#00a1ec" underline="true">
            <font><Font name="System Bold" size="26.0" /></font>
        </Label>

        <Label layoutX="40.0" layoutY="80.0" text="Client ID:" textFill="white" />
        <TextField fx:id="clientIdTextField" layoutX="160.0" layoutY="76.0" prefWidth="200.0" />

        <Label layoutX="40.0" layoutY="130.0" text="Visa Type:" textFill="white" />
        <ComboBox fx:id="visaTypeComboBox" layoutX="160.0" layoutY="126.0" prefWidth="200.0" />

        <Label layoutX="40.0" layoutY="180.0" text="Nationality:" textFill="white" />
        <TextField fx:id="nationalityTextField" layoutX="160.0" layoutY="176.0" prefWidth="200.0" />

        <Label layoutX="40.0" layoutY="230.0" text="Mother Language:" textFill="white" />
        <TextField fx:id="motherLanguageTextField" layoutX="160.0" layoutY="226.0" prefWidth="200.0" />

        <Label layoutX="40.0" layoutY="280.0" text="Passport No.:" textFill="white" />
        <TextField fx:id="passportNoTextField" layoutX="160.0" layoutY="276.0" prefWidth="200.0" />

