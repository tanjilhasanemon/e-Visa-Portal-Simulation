<AnchorPane prefHeight="585.0" prefWidth="700.0" style="-fx-background-color: #36454F;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.visa_management_portal.tanjil.applicant.controller.ApplyVisaController">
    <Label layoutX="240.0" layoutY="20.0" text="Apply for Visa" textFill="#00a1ec" underline="true">
        <font>
            <Font name="System Bold" size="26.0" />
        </font>
    </Label>

    <Label layoutX="58.0" layoutY="132.0" text="Visa Type:" textFill="white" />
    <ComboBox fx:id="visaTypeComboBox" layoutX="198.0" layoutY="127.0" prefWidth="200.0" />

    <Label layoutX="58.0" layoutY="177.0" text="Nationality:" textFill="white" />
    <TextField fx:id="nationalityTextField" layoutX="198.0" layoutY="172.0" prefWidth="200.0" />

    <Label layoutX="58.0" layoutY="222.0" text="Mother Language:" textFill="white" />
    <TextField fx:id="motherLangTextField" layoutX="198.0" layoutY="217.0" prefWidth="200.0" />

    <Label layoutX="58.0" layoutY="267.0" text="Full Name:" textFill="white" />
    <TextField fx:id="fullNameTextField" layoutX="198.0" layoutY="262.0" prefWidth="200.0" />

    <Label layoutX="58.0" layoutY="312.0" text="Passport No.:" textFill="white" />
