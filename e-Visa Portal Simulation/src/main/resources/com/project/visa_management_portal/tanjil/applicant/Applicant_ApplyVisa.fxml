            <ToggleGroup fx:id="genderGroup" />
        </toggleGroup>
    </RadioButton>
    <RadioButton fx:id="femaleRadioButton" layoutX="268.0" layoutY="430.0" text="Female" textFill="white" toggleGroup="$genderGroup" />

    <Button layoutX="15.0" layoutY="510.0" onAction="#submitOnAction" prefHeight="37.0" prefWidth="130.0" style="-fx-background-color: #00a1ec;" text="Submit" />

    <Button layoutX="515.0" layoutY="510.0" onAction="#backToDashboardOnAction" prefHeight="37.0" prefWidth="130.0" style="-fx-background-color: #00a1ec;" text="Back to Dashboard" />

    <Label alignment="CENTER" layoutY="581.0" prefHeight="20.0" prefWidth="700.0" style="-fx-background-color: white;" text="eVisa Portal | Applicant Module" />
    <Button layoutX="175.0" layoutY="510.0" onAction="#validateOnAction" prefHeight="37.0" prefWidth="130.0" style="-fx-background-color: #00a1ec;" text="Validate" />
   <Label fx:id="statusLabel" layoutX="198.0" layoutY="74.0" prefHeight="18.0" prefWidth="351.0" textFill="WHITE" />
