<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #36454F;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.visa_management_portal.tanjil.applicant.controller.ApplyVisaController">
    <Label layoutX="240.0" layoutY="20.0" text="Apply for Visa" textFill="#00a1ec" underline="true">
        <font>
            <Font name="System Bold" size="26.0" />
        </font>
    </Label>

    <Label layoutX="60.0" layoutY="80.0" text="Visa Type:" textFill="white" />
    <ComboBox fx:id="visaTypeComboBox" layoutX="200.0" layoutY="75.0" prefWidth="200.0" />

    <Label layoutX="60.0" layoutY="125.0" text="Nationality:" textFill="white" />
    <TextField fx:id="nationalityTextField" layoutX="200.0" layoutY="120.0" prefWidth="200.0" />

    <Label layoutX="60.0" layoutY="170.0" text="Mother Language:" textFill="white" />
    <TextField fx:id="motherLangTextField" layoutX="200.0" layoutY="165.0" prefWidth="200.0" />

    <Label layoutX="60.0" layoutY="215.0" text="Full Name:" textFill="white" />
    <TextField fx:id="fullNameTextField" layoutX="200.0" layoutY="210.0" prefWidth="200.0" />

    <Label layoutX="60.0" layoutY="260.0" text="Passport No.:" textFill="white" />
    <TextField fx:id="passportNoTextField" layoutX="200.0" layoutY="255.0" prefWidth="200.0" />

    <Label layoutX="60.0" layoutY="305.0" text="Purpose of Visit:" textFill="white" />
    <TextArea fx:id="purposeOfVisitTextArea" layoutX="200.0" layoutY="300.0" prefHeight="60.0" prefWidth="300.0" />

    <Label layoutX="60.0" layoutY="380.0" text="Gender:" textFill="white" />
    <RadioButton fx:id="maleRadioButton" layoutX="200.0" layoutY="378.0" text="Male" textFill="white">
        <toggleGroup>
            <ToggleGroup fx:id="genderGroup" />
        </toggleGroup>
    </RadioButton>
    <RadioButton fx:id="femaleRadioButton" layoutX="270.0" layoutY="378.0" text="Female" textFill="white" toggleGroup="$genderGroup" />

    <Button layoutY="430.0" onAction="#submitOnAction" prefHeight="37.0" prefWidth="130.0" style="-fx-background-color: #00a1ec;" text="Submit" />

    <Button layoutX="517.0" layoutY="430.0" onAction="#backToDashboardOnAction" prefHeight="37.0" prefWidth="130.0" style="-fx-background-color: #00a1ec;" text="Back to Dashboard" />

    <Label alignment="CENTER" layoutY="480.0" prefHeight="20.0" prefWidth="700.0" style="-fx-background-color: white;" text="eVisa Portal | Applicant Module" />
    <Button layoutX="175.0" layoutY="430.0" onAction="#validateOnAction" prefHeight="37.0" prefWidth="130.0" style="-fx-background-color: #00a1ec;" text="Validate" />
</AnchorPane>
