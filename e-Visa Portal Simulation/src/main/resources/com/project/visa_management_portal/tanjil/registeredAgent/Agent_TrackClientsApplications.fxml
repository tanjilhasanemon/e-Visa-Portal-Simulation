<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #36454F;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.visa_management_portal.tanjil.registeredAgent.controller.TrackClientsController">
    <children>
        <Label layoutX="200.0" layoutY="20.0" text="My Clients' Applications" textFill="#00a1ec" underline="true">
            <font><Font name="System Bold" size="26.0" /></font>
        </Label>

        <TextField fx:id="filterClientOrStatusTextField" layoutX="20.0" layoutY="70.0" prefWidth="500.0" promptText="Filter by client or status" />
        <Button layoutX="540.0" layoutY="70.0" onAction="#applyFilterOnAction" prefWidth="140.0" style="-fx-background-color: #00a1ec;" text="Apply Filter" />

        <TableView fx:id="clientApplicantionsTableView" layoutX="20.0" layoutY="110.0" prefHeight="300.0" prefWidth="660.0">
            <columns>
                <TableColumn fx:id="applicationIdTableColumn" prefWidth="220.0" text="Application ID" />
                <TableColumn fx:id="clientTableColumn" prefWidth="220.0" text="Client" />
                <TableColumn fx:id="statusTableColumn" prefWidth="220.0" text="Status" />
            </columns>
        </TableView>

        <Button layoutX="20.0" layoutY="420.0" onAction="#viewDetailsOnAction" prefWidth="160.0" style="-fx-background-color: #00a1ec;" text="View Details" />
        <Button layoutX="200.0" layoutY="420.0" onAction="#backToDashboardOnAction" prefWidth="160.0" style="-fx-background-color: #00a1ec;" text="Back to Dashboard" />

        <Label alignment="CENTER" layoutY="480.0" prefHeight="20.0" prefWidth="700.0" style="-fx-background-color: white;" text="eVisa Portal | Agent - Track" />
    </children>
</AnchorPane>
