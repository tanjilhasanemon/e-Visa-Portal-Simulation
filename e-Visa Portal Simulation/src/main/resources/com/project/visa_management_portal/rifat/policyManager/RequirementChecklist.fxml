<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<AnchorPane prefHeight="597.0" prefWidth="874.0" style="-fx-background-color: #36454F;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.visa_management_portal.rifat.policyManager.controller.RequirementChecklistController">
    <children>
        <Label fx:id="lblTitle" text="Requirement Checklist" AnchorPane.topAnchor="16.0" AnchorPane.leftAnchor="16.0"/>

        <ComboBox fx:id="cmbVisaType" AnchorPane.topAnchor="56.0" AnchorPane.leftAnchor="16.0" prefWidth="220.0"/>

        <TableView fx:id="tblChecklist" AnchorPane.topAnchor="96.0" AnchorPane.leftAnchor="16.0" AnchorPane.rightAnchor="16.0" AnchorPane.bottomAnchor="80.0">
            <columns>
                <TableColumn fx:id="colDocumentName" text="DocumentName"/>
                <TableColumn fx:id="colRequiredFlag" text="Required"/>
            </columns>
        </TableView>

        <!-- CheckBox per row is represented in the table's Required column -->
        <Button fx:id="btnSave" text="Save" AnchorPane.bottomAnchor="16.0" AnchorPane.rightAnchor="16.0"/>
    </children>
    <!-- FileChooser and Alert (dialogs used by this view): FileChooser fx:id="fileChooser", Alert fx:id="alert" -->
</AnchorPane>
